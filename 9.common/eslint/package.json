{
  "name": "linter",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "lint:eslint": "yarn eslint --cache --max-warnings 0 --report-unused-disable-directives \"**/*.{js,ts,vue,html}\"",
    "lint:eslint:fix": "yarn lint:eslint --fix",
    "lint:prettier": "yarn prettier --check \"**/*.{js,json,ts,vue,html}\"",
    "lint:prettier:fix": "yarn prettier --write \"**/*.{js,json,ts,vue,html}\"",
    "lint:stylelint": "yarn stylelint --cache -q \"**/*.{vue,css}\"",
    "lint:stylelint:fix": "yarn lint:stylelint --fix",
    "lint": "yarn lint:eslint && yarn lint:prettier && yarn lint:stylelint"
  },
  "devDependencies": {
    "eslint": "8.6.0",
    "eslint-config-prettier": "8.3.0",
    "prettier": "2.5.1",
    "stylelint": "14.2.0",
    "stylelint-config-html": "1.0.0",
    "stylelint-config-prettier": "9.0.3",
    "stylelint-config-rational-order": "0.1.2",
    "stylelint-config-recommended-vue": "1.1.0",
    "stylelint-config-standard": "24.0.0",
    "stylelint-order": "5.0.0"
  }
}
