{
    "compilerOptions": {
        "module": "esnext",
        "moduleResolution": "node",
        "target": "esnext",
        "strict": true,
        "baseUrl": ".",
        "esModuleInterop": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "paths": {
            "@/*": ["src/*"]
        }
    },
    "exclude": [
        "dist",
        "node_modules",
        "**/node_modules/*"
    ]
}
